{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Hunger Index | Index ranges from 0 to 100",
    "width": 500, 
    "height": 300,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "paleturquoise"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/myintmyatthura/FIT3179-Assignment-2/main/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/myintmyatthura/FIT3179-Assignment-2/main/index_2002.csv"
              },
              "key": "Country",
              "fields": ["Index"]
            }
          },
          {"calculate": "datum.Index", "as": "Index"}
        ],
        "mark": {"type": "geoshape", "stroke": "black"},
        "encoding": {
          "color": {
            "field": "Index", 
            "type": "quantitative",
            "scale": {"type": "linear","range":["lightgray","lightblue","violet"]}
            
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Index", "type": "quantitative"}
          ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/myintmyatthura/FIT3179-Assignment-2/main/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "stroke": "grey", "fill": null}
      }
      
    ]
  }