{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Stunting of Children | Stunting shown as percentage of population",
    "height": 400,
    "width": 760.05,
    "projection": {"type": "equalEarth"},
    "config": {"background": "lightcyan"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        
        "mark": {"type": "geoshape", "fill": "lightseagreen"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/myintmyatthura/FIT3179-Assignment-2/main/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/myintmyatthura/FIT3179-Assignment-2/main/stunting_full.csv"
              },
              "key": "Country",
              "fields": ["Stunting"]
            }
          },
          {"calculate": "datum.Stunting", "as": "Stunting"}
        ],
        "mark": {"type": "geoshape", "stroke": "black"},
        "encoding": {
          "color": {
            "field": "Stunting", 
            "type": "quantitative",
            "scale": {"type": "linear","range":["gray","orange","red"]}
            
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Stunting", "type": "quantitative"}
          ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/myintmyatthura/FIT3179-Assignment-2/main/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "stroke": "grey", "fill": null}
      }
      
    ]
  }